---
import Layout from "@components/layout.astro"
import { Image } from "@astrojs/image/components"
---

<Layout title={"Error 404"}>
  <div class="w-full h-screen bg-secondary">
    <div class="flex flex-col gap-8 items-center justify-center p-8 h-full">
      <Image
        src="/assets/Logo.svg"
        format={"svg"}
        alt="Logo"
        width={200}
        height={40}
        class="h-auto"
      />
      <h1 class="m-0">Error: 404</h1>
      <h3 class="text-center m-0">
        The page you were trying to locate is not available, or has been moved.
      </h3>
      <h3 class="text-center m-0">Redirecting...</h3>
    </div>
  </div>
</Layout>
<script type="text/javascript">
  setTimeout(() => window.location.assign("/"), 3000)
</script>
